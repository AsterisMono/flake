{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "height": 22,
  "spacing": 20,
  "margin-left": 8,
  "margin-right": 8,
  "margin-top": 4,
  "margin-bottom": 4,
  "modules-left": ["clock", "custom/nixos", "systemd-failed-units"],
  "modules-center": ["mpris"],
  "modules-right": [
    "network",
    "temperature",
    "cpu",
    "memory",
    "battery",
    "backlight",
    "wireplumber",
    "tray"
  ],

  "clock": {
    "format": "üè≥Ô∏è‚Äç‚ößÔ∏è {:%H:%M}",
    "tooltip-format": "{:%Y-%m-%d}"
  },

  "systemd-failed-units": {
    "hide-on-ok": true,
    "format": "ÔÅ± {nr_failed}",
    "format-ok": "ÔÅ± 1",
    "system": true,
    "user": true
  },

  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": ["Û∞Éû", "Û∞Éù", "Û∞É†"],
    "on-scroll-up": "brightnessctl set 1%+",
    "on-scroll-down": "brightnessctl set 1%-",
    "min-length": 6
  },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-charging": "Ôá¶ {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
  },

  "wireplumber": {
    "format": "{icon} {volume}%",
    "format-muted": "Ôë¶",
    "scroll-step": 1,
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click-right": "pavucontrol",
    "format-icons": {
      "default": "ÔÄ•"
    }
  },

  "temperature": {
    "thermal-zone": 0,
    "format": "Ôãâ {temperatureC}¬∞C"
  },

  "cpu": {
    "interval": 30,
    "format": "Ôíº {}%"
  },

  "memory": {
    "interval": 30,
    "format": "ÓøÖ {}%",
    "max-length": 10,
    "tooltip": true,
    "tooltip-format": "Memory - {used:0.1f}GB used",
    "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
  },

  "network": {
    "format-wifi": "Ôá´ {signalStrength}%",
    "format-ethernet": "{ipaddr}/{cidr} Û∞àÄ",
    "tooltip-format": "{essid} - {ifname} via {gwaddr} ÔÉÅ",
    "format-linked": "{ifname} (No IP) Û∞àÄ",
    "format-disconnected": "Ó´ê",
    "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}",
    "on-click-right": "nmgui"
  },

  "bluetooth": {
    "format": "Û∞ÇØ {status}",
    "format-disabled": "", // an empty format will hide the module
    "format-connected": "Û∞ÇØ {num_connections}",
    "tooltip-format": "{device_alias}",
    "tooltip-format-connected": "Û∞ÇØ {device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}"
  },

  "mpris": {
    "format": "{status_icon} {dynamic}",
    "status-icons": {
      "playing": "ÔÅã",
      "paused": "ÔÅå",
      "stopped": "ÔÅç"
    }
  },

  "tray": {
    "icon-size": 16,
    "spacing": 4
  },

  "custom/nixos": {
    "exec": "cat /run/current-system/nixos-version",
    "interval": "once",
    "format": "with Noa Virellia ¬∑ NixOS {text}"
  }
}
